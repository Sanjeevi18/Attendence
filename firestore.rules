rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own user document
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Company documents - admins can read/write their own company
    match /companies/{companyId} {
      allow read, write: if request.auth != null;
    }
    
    // Attendance records - users can read/write their own attendance
    match /attendance/{attendanceId} {
      allow read, write: if request.auth != null;
    }
    
    // Leave requests - users can read/write their own requests, admins can read/write company requests
    match /leave_requests/{requestId} {
      allow read, write: if request.auth != null;
    }
    
    // Holidays - all authenticated users can read
    match /holidays/{holidayId} {
      allow read, write: if request.auth != null;
    }
    
    // Employee locations - admins can read/write
    match /employee_locations/{locationId} {
      allow read, write: if request.auth != null;
    }
  }
}
